{
  "sources": ["src/*.c", "src/engine/**/*.c", "src/io/assets/*.c", "src/io/audio/impl/*.c"],
  "backends": {
    "any": {
      "graphics": ["sdl3", "opengl"],
      "audio": "sdl3",
      "input": "sdl3"
    }
  },
  "defines": {
    "any": {
      "BACKEND_DIR": "src/io",
      "BUILD_DIR": "bin",
      "BUILD_TARGET": "cat",
      "ASSETS_DIR": "assets",
      "ASSETS_DEST": "src/io/assets/data.h",
      "COMPILER": "gcc",
      "CLANGD_IGNORE": "1"
    },
    "windows": {
      "BUILD_TARGET": "cat.exe"
    }
  },
  "flags": {
    "any": {
      "pkgconf": "sdl3 glew",
      "cflags": "-g -Isrc -Iinclude",
      "ldflags": "-g -Wl,--allow-multiple-definition"
    },
    "linux": {
      "ldflags": "-rdynamic -lm"
    },
    "windows": {
      "pkgconf": "--static",
      "ldflags": "-static"
    }
  }
}
